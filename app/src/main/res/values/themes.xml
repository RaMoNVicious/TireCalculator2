<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TireCalculator2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->

        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/background_main</item>

        <item name="fontFamily">@font/roboto_slab_medium</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="BottomSheetPopupTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetPopup</item>
    </style>

    <style name="BottomSheetPopup" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_popup</item>
    </style>



    <style name="Label" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_label</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Label.Dialog" parent="@style/Label">
        <!--<item name="android:layout_width">0dp</item>-->
    </style>

    <style name="Label.Title" parent="@style/Label">
        <item name="android:textSize">@dimen/text_title_size</item>
    </style>


    <style name="Button.Image" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/menu_button_size</item>
        <item name="android:layout_height">@dimen/menu_button_size</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Button.Link" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:padding">0dp</item>-->
        <!--<item name="android:background">@android:color/transparent</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>
    
    <style name="ShapeAppearance.Button" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">@dimen/tire_button_size</item>
        <item name="cornerRadius">@dimen/tire_button_size</item>
    </style>


    <style name="Button.Size" parent="Widget.Material3.Button">
        <item name="android:layout_width">@dimen/tire_button_size</item>
        <item name="android:layout_height">@dimen/tire_button_size</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/button_disabled</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Button</item>
    </style>

</resources>